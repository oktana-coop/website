---
import type { InferEntrySchema } from 'astro:content';

interface Props {
  post: InferEntrySchema<'blog'>;
  isFeatured: boolean;
}

const { post, isFeatured } = Astro.props;
---

<div class="flex flex-col items-center sm:items-start gap-2">
  <p class="text-xs md:text-sm text-black/75">
    {post.publishedAt ? post.publishedAt.toLocaleDateString() : 'Coming Soon'}
  </p>
  <a href=`/blog/${post.slug}`
    ><h3
      class={isFeatured
        ? 'text-xl sm:text-2xl md:text-3xl text-center sm:text-left font-serif font-bold'
        : 'text-lg md:text-[1.375rem] text-center sm:text-left font-serif font-bold'}
    >
      {post.title}
    </h3></a
  >
  <p
    class={isFeatured
      ? 'text-base/7 md:text-lg/8 text-black font-light'
      : 'text-sm/6 text-black font-light'}
  >
    {post.description}
  </p>
</div>
